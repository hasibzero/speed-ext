{
    "manifest_version": 3,
    "name": "YouTube & Facebook Speed Accelerator",
    "version": "1.1",
    "description": "Adds playback speed controls to YouTube and Facebook videos.",
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*", "*://*.facebook.com/*"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ],
    "permissions": []
}